@model FinalProject.Models.Album

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="/css/album/AlbumDet.css" media="screen" title="no title" charset="utf-8">


<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center justify-content-around flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text">
                    <h3 class="dark-color">@Html.DisplayFor(model => model.AlbumName)</h3>
                    <h4 class="theme-color"><a asp-action="Details" asp-controller="Artists" asp-route-id="@Model.ArtistID">@Html.DisplayFor(model => model.Artist.Name)</a></h4>
                    <h5>Release Date: @Html.DisplayFor(model => model.ReleaseDate)</h5>
                    <h6>Genre: @Html.DisplayFor(model => model.Genre)</h6>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                    <div class="btn-bar">
                        <a class="h3" id="price">$@Html.DisplayFor(model => model.Price)</a>
                        <a asp-action="AddToCart" asp-route-serviceId=@Model.Id id ="AddToCart" class="px-btn theme">Add to Cart</a>

                    </div>
                </div>
            </div>
            <div class="col-lg-5 text-center">
                <div class="about-img">
                    <img src="@Url.Action("GetAlbumArt", "Albums", new {Model.Id})">
                </div>            
            </div>
        </div>
    </div>
</section>
