@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Admin - All Roles";
}

<br />
<h1 >Admin</h1>
<h4 >All Roles</h4>
<br />

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Admin">Add a new role</a>
    foreach (var role in Model)
    {
        <div class="card mb-12" >
            <div class="card-header" >
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-danger" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
            </div>
        </div>
        <br />
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
    <h1>Chris sucks at coding moment</h1>
}